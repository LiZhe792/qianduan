<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.teach.javafx.controller.AchievementController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="5.0">
            <children>
                <FlowPane prefHeight="40.0" prefWidth="200.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#onAddButtonClick" text="添加">
                            <FlowPane.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </FlowPane.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#onDeleteButtonClick" text="删除">
                            <FlowPane.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </FlowPane.margin>
                        </Button>
                    </children>
                </FlowPane>
                <Pane prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS" />
                <FlowPane alignment="TOP_RIGHT" prefHeight="40.0" prefWidth="400.0">
                    <children>
                        <Label prefWidth="80.0" text="标题/类型">
                            <FlowPane.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </FlowPane.margin>
                        </Label>
                        <TextField fx:id="keywordTextField" prefWidth="150.0">
                            <FlowPane.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </FlowPane.margin>
                        </TextField>
                        <Button mnemonicParsing="false" onAction="#onQueryButtonClick" text="查询">
                            <FlowPane.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </FlowPane.margin>
                        </Button>
                    </children>
                </FlowPane>
            </children>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </padding>
        </HBox>
    </top>
    <center>
        <SplitPane dividerPositions="0.7">
            <items>
                <TableView fx:id="dataTableView">
                    <columns>
                        <TableColumn fx:id="studentNumColumn" prefWidth="100.0" text="学号" />
                        <TableColumn fx:id="studentNameColumn" prefWidth="80.0" text="姓名" />
                        <TableColumn fx:id="titleColumn" prefWidth="150.0" text="成果标题" />
                        <TableColumn fx:id="typeColumn" prefWidth="80.0" text="类型" />
                        <TableColumn fx:id="dateColumn" prefWidth="100.0" text="日期" />
                        <TableColumn fx:id="levelColumn" prefWidth="80.0" text="级别" />
                        <TableColumn fx:id="statusColumn" prefWidth="80.0" text="状态" />
                    </columns>
                </TableView>
                <VBox alignment="TOP_CENTER" spacing="20.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <GridPane hgap="10.0" vgap="10.0">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="80.0" minWidth="80.0" prefWidth="80.0" />
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="100.0" prefHeight="100.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        </rowConstraints>
                        <children>
                            <Label text="学号" GridPane.rowIndex="0" />
                            <TextField fx:id="studentNumField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                            <Label text="成果标题" GridPane.rowIndex="1" />
                            <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                            <Label text="类型" GridPane.rowIndex="2" />
                            <ComboBox fx:id="typeComboBox" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                            <Label text="日期" GridPane.rowIndex="3" />
                            <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                            <Label text="级别" GridPane.rowIndex="4" />
                            <ComboBox fx:id="levelComboBox" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                            <Label text="描述" GridPane.rowIndex="5" />
                            <TextArea fx:id="descriptionArea" prefHeight="100.0" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                            <Label text="状态" GridPane.rowIndex="6" />
                            <ComboBox fx:id="statusComboBox" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                        </children>
                    </GridPane>
                    <Button onAction="#onSaveButtonClick" text="保存">
                        <VBox.margin>
                            <Insets top="20.0" />
                        </VBox.margin>
                    </Button>
                </VBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>